<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/frame_layout">

    </FrameLayout>




    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/home_bottom_nav"
        android:layout_gravity="bottom"
        app:itemRippleColor="@color/light_purple"
        app:itemTextColor="@color/bottom_nav_selector_color"
        android:padding="0dp"
        app:labelVisibilityMode="labeled"
        android:layout_margin="0dp"
        app:itemIconTint="@color/bottom_nav_selector_color"
        android:background="@drawable/home_bottom_nav"/>









</LinearLayout>